---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  image?: string;
}

const { title, description, date, slug, image } = Astro.props;
---

<article class="border rounded overflow-hidden transition border-gray-300 hover:border-gray-500">
  {image && (
    <img src={image} alt={title} class="w-full h-48 object-cover" />
  )}
  <div class="p-6">
    <time class="text-sm text-gray-600">
      {date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
    </time>
    <h3 class="text-xl font-bold mt-2 mb-3">
      <a href={`/blog/${slug}`} class="text-gray-500 hover:text-gray-900 transition-colors">
        {title}
      </a>
    </h3>
    <p class="text-gray-700">{description}</p>
  </div>
</article>
