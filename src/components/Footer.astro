---
import { Github, Linkedin, Mail } from "@lucide/astro";
const date = new Date();
---
<footer class="border-t border-gray-200 mt-auto">
  <div class="max-w-5xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-sm text-gray-500">
        &copy; {date.getFullYear()} Tife. All rights reserved.
      </div>
      
      <div class="flex items-center gap-6">
        <a
          href="https://github.com/onifs10"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 hover:text-gray-900 transition-colors"
          aria-label="GitHub"
        >
          <Github size={20} />
        </a>
        <a
          href="https://linkedin.com/in/onifade-boluwatife"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 hover:text-gray-900 transition-colors"
          aria-label="LinkedIn"
        >
          <Linkedin size={20} />
        </a>
        <a
          href="mailto:onifadebolu64@gmail.com"
          class="text-gray-500 hover:text-gray-900 transition-colors"
          aria-label="Email"
        >
          <Mail size={20} />
        </a>
      </div>
    </div>
  </div>
</footer>
