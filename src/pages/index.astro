---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Base - Tife's Space">
  <section class="text-center py-20">
    <h1 class="text-5xl font-bold mb-4">Hi, I'm Your Name</h1>
    <p class="text-xl text-gray-600 mb-8">
      Software engineer, Writer, Photographer
    </p>
    <div class="flex gap-4 justify-center">
      <a href="/blog" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">
        Read My Blog
      </a>
      <a href="/gallery" class="border border-blue-600 text-blue-600 px-6 py-3 rounded-lg hover:bg-blue-50">
        View Gallery
      </a>
    </div>
  </section>
</BaseLayout>
